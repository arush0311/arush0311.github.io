<!DOCTYPE html>
<html>
<head>
    {% include 'includes/head.njk' %}
</head>
<body>
    <div class="container">
        {% include 'includes/appbar.njk' %}
        
        <div class="offset">
        </div>
        <div class="tag_list">
            {% for category in site.categories.toArray() %}
                    <a class="link--reset tag"
                    href="#{{ category.slug }}">
                        {{ category.name }}
                    </a>
            {% endfor %}
        </div>
        <div class = "post_list">
            {% for category in site.categories.toArray() %}
                <div class="category_list seek" id="{{ category.slug }}">
                    <h2>
                        {{ category.name | title}}
                    </h2>
                    {% for post in category.posts.toArray() %}
                        <a class="link--reset"
                        href="{{ url_for(post.path) }}">
                            <div class="post">
                                <div class = "post__header">
                                    {{ post.title }}
                                </div>
                                <div class = "post__date">
                                    On {{ post.date.format('dddd, MMMM Do, YYYY') }}
                                </div>
                                <div class = "post__body">
                                    {{ post.excerpt }}
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
        {% include 'includes/footer.njk' %}
    </div>
</body>
</body>
</html>