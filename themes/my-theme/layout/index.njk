<!DOCTYPE html>
<html>
<head>
	{% include 'includes/head.njk' %}
</head>
<body>
    <div class="container">
		{% include 'includes/appbar.njk' %}
		<div class = "post_list">
			{% for post in site.posts.toArray() %}
				<a class="link--reset" href="{{ url_for(post.path) }}">
					<div class="post">
						<div>
							<div class = "post__header">
								{{ post.title }}
							</div>
							<div class = "post__date">
								On {{ post.date.format('dddd, MMMM Do, YYYY') }}
							</div>
							<div class = "post__body">
								{{ post.excerpt }}
							</div>
						</div>
						{% for category in post.categories.toArray() %}
							<a class="link--reset tag"
							href="{{ url_for('/categories/#' + category.slug) }}">
								{{ category.name }}
							</a>
						{% endfor %}
					</div>
				</a>
			{% endfor %}
		</div>
		{% include 'includes/footer.njk' %}
	</div>
</body>
</html>
